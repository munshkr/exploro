<div class="container">
  <div class="row">
    <h3>Documentos</h3>
    <% if @documents.count > 0 %>
    <table class="table table-condensed documents">
      <thead>
        <tr>
          <td>Nombre de archivo</td>
          <td>Creado en</td>
          <td>Estado</td>
          <td>Progreso</td>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <%= partial :document_row, locals: { document: document } %>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No hay documentos cargados a√∫n.</div>
    <% end %>
  </div>
</div>

<% content_for :js do %>
  <script src="/js/document_list.js"></script>
  <script>$(function() { setDocumentStateAutoUpdate(<%= @documents.map(&:id).to_json %>); });</script>
<% end %>
